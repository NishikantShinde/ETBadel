<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/dinnextltarabic_regular_4</item>
        <item name="fontFamily">@font/dinnextltarabic_regular_4</item>
    </style>

    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/dinnextltarabic_regular_4</item>
        <item name="fontFamily">@font/dinnextltarabic_regular_4</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/dinnextltarabic_regular_4</item>
        <item name="fontFamily">@font/dinnextltarabic_regular_4</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SampleProgress">
        <item name="android:layout_width">260dp</item>
        <item name="android:layout_height">30dp</item>
    </style>

    <style name="SampleProgress.Thin">
        <item name="android:layout_width">260dp</item>
        <item name="android:layout_height">7dp</item>
    </style>


</resources>